root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.{c,h,cpp,hpp}]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
# Markdown uses the trailing whitespaces.
# https://daringfireball.net/projects/markdown/syntax#block
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[.travis.yml]
indent_size = 2
indent_style = space
